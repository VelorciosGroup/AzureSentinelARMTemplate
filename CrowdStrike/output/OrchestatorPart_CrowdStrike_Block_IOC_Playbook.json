{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workflows_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name": {
      "defaultValue": "BORRAR",
      "type": "string"
    },
    "workflows_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid": {
      "defaultValue": "BORRAR",
      "type": "string"
    }
  },
  "variables": {
    "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('workflows_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name'))]",
    "var_workflows_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name ,'/providers/Microsoft.Logic/workflows/', parameters('workflows_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2017-07-01",
      "name": "[parameters('workflows_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name')]",
      "location": "westeurope",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "workflows_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name": {
              "type": "String",
              "defaultValue": "[parameters('workflows_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name')]"
            },
            "workflows_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid": {
              "type": "String",
              "defaultValue": "[variables('var_workflows_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid')]"
            },
            "$connections": {
              "type": "Object",
              "defaultValue": {}
            }
          },
          "triggers": {
            "Manual": {
              "type": "Request",
              "kind": "Http",
              "inputs": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    },
                    "content": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "type",
                    "content"
                  ]
                }
              }
            }
          },
          "actions": {
            "OrchestatorPart_CrowdStrike_Auth_Playbook": {
              "runAfter": {
                "Initialize_variables_indicators": [
                  "Succeeded"
                ]
              },
              "type": "Workflow",
              "inputs": {
                "host": {
                  "workflow": {
                    "id": "[parameters('workflows_MSSP_OrchestatorPart_CrowdStrike_Auth_Playbook_externalid')]"
                  },
                  "triggerName": "manual"
                }
              }
            },
            "Parse_JSON": {
              "runAfter": {
                "OrchestatorPart_CrowdStrike_Auth_Playbook": [
                  "Succeeded"
                ]
              },
              "type": "ParseJson",
              "inputs": {
                "content": "@body('OrchestatorPart_CrowdStrike_Auth_Playbook')",
                "schema": {
                  "type": "object",
                  "properties": {
                    "AccessToken": {
                      "type": "string"
                    },
                    "FalconHost": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "For_each_Indicator": {
              "foreach": "@triggerBody()?['content']",
              "actions": {
                "HTTP_POST_IOC_Indicators": {
                  "type": "Http",
                  "inputs": {
                    "uri": "@{body('Parse_JSON')?['FalconHost']}​/iocs/entities/indicators/v1?ignore_warnings=false\n",
                    "method": "POST",
                    "headers": {
                      "Authorization": "@{body('Parse_JSON')?['AccessToken']}",
                      "Content-Type": "application/json",
                      "Accept": "application/json"
                    },
                    "body": {
                      "comment": "Bloqueo automático desde playbook de sentinel",
                      "indicators": [
                        {
                          "action": "prevent",
                          "applied_globally": true,
                          "description": "Bloqueo de hash malicioso",
                          "type": "@triggerBody()?['type']",
                          "value": "@items('For_each_Indicator')",
                          "severity": "medium",
                          "platforms": [
                            "windows",
                            "linux",
                            "mac"
                          ]
                        }
                      ]
                    }
                  },
                  "runtimeConfiguration": {
                    "contentTransfer": {
                      "transferMode": "Chunked"
                    }
                  }
                },
                "Append_to_string_variable": {
                  "runAfter": {
                    "HTTP_POST_IOC_Indicators": [
                      "Succeeded"
                    ]
                  },
                  "type": "AppendToStringVariable",
                  "inputs": {
                    "name": "indicators_created",
                    "value": "Se ha creado el indicador de compromiso\n\n@{body('HTTP_POST_IOC_Indicators')}\n\n"
                  }
                }
              },
              "runAfter": {
                "Parse_JSON": [
                  "Succeeded"
                ]
              },
              "type": "Foreach"
            },
            "Initialize_variables_indicators": {
              "runAfter": {},
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "indicators_created",
                    "type": "string"
                  }
                ]
              }
            },
            "Response": {
              "runAfter": {
                "For_each_Indicator": [
                  "Succeeded"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "statusCode": 201,
                "body": {
                  "message": "@variables('indicators_created')"
                }
              }
            },
            "Response_1": {
              "runAfter": {
                "For_each_Indicator": [
                  "TimedOut",
                  "Failed",
                  "Skipped"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "statusCode": 400,
                "body": {
                  "message": "[concat('❌ Playbook ''', parameters('workflows_MSSP_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name'), ' '' falló.\nMotivo: Fallo en POST IOC Indicators.\nAcción requerida: Revisión manual')]"
                }
              }
            },
            "Response_2": {
              "runAfter": {
                "OrchestatorPart_CrowdStrike_Auth_Playbook": [
                  "Failed",
                  "TimedOut",
                  "Skipped"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "statusCode": 400,
                "body": {
                  "message": "[concat('❌ Playbook ''', parameters('workflows_MSSP_OrchestatorPart_CrowdStrike_Block_IOC_Playbook_name'), ' '' falló.\nMotivo: Fallo en auth.\nAcción requerida: Revisión manual')]"
                }
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "azuresentinel": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                "connectionName": "[variables('AzureSentinelConnectionName')]",
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]",
                "connectionProperties": {
                  "authentication": {
                    "type": "ManagedServiceIdentity"
                  }
                }
              }
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('AzureSentinelConnectionName')]",
      "location": "[resourceGroup().location]",
      "kind": "V1",
      "properties": {
        "displayName": "[variables('AzureSentinelConnectionName')]",
        "customParameterValues": {},
        "parameterValueType": "Alternative",
        "api": {
          "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
        }
      }
    }
  ]
}