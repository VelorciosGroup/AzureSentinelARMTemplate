{
	"$schema": "http://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"client_Name": {
			"defaultValue": "PRUEBADESPLIEGUE",
			"type": "string"
		},
		"keyvault_Name_Pack": {
			"defaultValue": "Keyvault-name-Crowdstrike",
			"type": "string"
		},
		"keyvault_ClientID_Pack": {
			"defaultValue": "ClientID-Crowdstrike",
			"type": "string"
		},
		"keyvault_Secret_Pack": {
			"defaultValue": "Secret-Crowdstrike",
			"type": "string"
		},
		"keyvault_BaseUrl_Pack": {
			"defaultValue": "BaseURL-Crowdstrike",
			"type": "string"
		}
	},
	"variables": {},
	"resources": [
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2025-03-01",
			"name": "Automation_CrowdStrike_Auth_Playbook",
			"dependsOn": [],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/VelorciosGroup/AzureSentinelARMTemplate/refs/heads/main/CrowdStrike/Cliente_Automation_CrowdStrike_Auth_Playbook.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"PlaybookName": {
						"value": "[concat(parameters('client_Name'), '_Automation_CrowdStrike_Auth_Playbook')]"
					},
					"keyvault_Name": {
						"value": "[parameters('keyvault_Name_Pack')]"
					},
					"keyvault_ClientID": {
						"value": "[parameters('keyvault_ClientID_Pack')]"
					},
					"keyvault_Secret": {
						"value": "[parameters('keyvault_Secret_Pack')]"
					},
					"keyvault_BaseUrl": {
						"value": "[parameters('keyvault_BaseUrl_Pack')]"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2025-03-01",
			"name": "Automation_CrowdStrike_Block_IOC_Playbook",
			"dependsOn": [
				"Automation_CrowdStrike_Auth_Playbook"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/VelorciosGroup/AzureSentinelARMTemplate/refs/heads/main/CrowdStrike/Cliente_Automation_CrowdStrike_Block_IOC_Playbook.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"PlaybookName": {
						"value": "[concat(parameters('client_Name'), '_Automation_CrowdStrike_Block_IOC_Playbook')]"
					},
					"Auth_Playbook_Name": {
						"value": "[concat(parameters('client_Name'), '_Automation_CrowdStrike_Auth_Playbook')]"
					}
				}
			}
		},
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2025-03-01",
			"name": "Action_CrowdStrike_Device_Isolation_Playbook",
			"dependsOn": [
				"Automation_CrowdStrike_Auth_Playbook"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/VelorciosGroup/AzureSentinelARMTemplate/refs/heads/main/CrowdStrike/Cliente_Action_CrowdStrike_Device_Isolation_Playbook.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"PlaybookName": {
						"value": "[concat(parameters('client_Name'), '_Action_CrowdStrike_Device_Isolation_Playbook')]"
					},
					"Auth_Playbook_Name": {
						"value": "[concat(parameters('client_Name'), '_Automation_CrowdStrike_Auth_Playbook')]"
					}
				}
			}
		}
	],
	"outputs": {
		"postDeployNote": {
			"type": "string",
			"value": "✅ Despliegue completado.\n⚠️ Ahora debes cambiar la conexión a la base de datos del playbook: \"Automation_API_Parser_Playbook\""
		},
		"postDeployApiTagInstructions": {
			"type": "string",
			"value": "✅ Despliegue completado.\n⚠️ Ahora se debe cambiar la petición a la API del cliente en el playbook \"Automation_API_Parser_Petition_Playbook\""
		}
	}
}