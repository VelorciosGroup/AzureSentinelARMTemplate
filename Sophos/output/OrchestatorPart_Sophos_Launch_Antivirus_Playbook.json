{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workflows_OrchestatorPart_Sophos_Launch_Antivirus_Playbook_name": {
      "defaultValue": "BORRAR",
      "type": "string"
    },
    "workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid": {
      "defaultValue": "BORRAR",
      "type": "string"
    }
  },
  "variables": {
    "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('workflows_OrchestatorPart_Sophos_Launch_Antivirus_Playbook_name'))]",
    "var_workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name ,'/providers/Microsoft.Logic/workflows/', parameters('workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2017-07-01",
      "name": "[parameters('workflows_OrchestatorPart_Sophos_Launch_Antivirus_Playbook_name')]",
      "location": "westeurope",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "workflows_OrchestatorPart_Sophos_Launch_Antivirus_Playbook_name": {
              "type": "String",
              "defaultValue": "[parameters('workflows_OrchestatorPart_Sophos_Launch_Antivirus_Playbook_name')]"
            },
            "workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid": {
              "type": "String",
              "defaultValue": "[variables('var_workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid')]"
            },
            "$connections": {
              "type": "Object",
              "defaultValue": {}
            }
          },
          "triggers": {
            "Manual": {
              "type": "Request",
              "kind": "Http",
              "inputs": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hostnames": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "actions": {
            "OrchestatorPart_Sophos_Auth_Playbook": {
              "runAfter": {
                "Hostname": [
                  "Succeeded"
                ]
              },
              "type": "Workflow",
              "inputs": {
                "host": {
                  "workflow": {
                    "id": "[variables('var_workflows_OrchestatorPart_Sophos_Auth_Playbook_externalid')]"
                  },
                  "triggerName": "When_an_HTTP_request_is_received"
                }
              }
            },
            "Parse_OrchestatorPart_Sophos_Auth_Playbook": {
              "runAfter": {
                "OrchestatorPart_Sophos_Auth_Playbook": [
                  "Succeeded"
                ]
              },
              "type": "ParseJson",
              "inputs": {
                "content": "@body('OrchestatorPart_Sophos_Auth_Playbook')",
                "schema": {
                  "type": "object",
                  "properties": {
                    "TenantRegion": {
                      "type": "string"
                    },
                    "TenantID": {
                      "type": "string"
                    },
                    "AccessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "For_each": {
              "foreach": "@triggerBody()?['hostnames']",
              "actions": {
                "HTTP_GET_DeviceID": {
                  "type": "Http",
                  "inputs": {
                    "uri": "@{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['TenantRegion']}/endpoint/v1/endpoints?hostnameContains=@{items('For_each')}",
                    "method": "GET",
                    "headers": {
                      "Content-Type": "application/json",
                      "X-Tenant-ID": "@{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['TenantID']}",
                      "Authorization": "Bearer @{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['AccessToken']}"
                    }
                  },
                  "runtimeConfiguration": {
                    "contentTransfer": {
                      "transferMode": "Chunked"
                    }
                  }
                },
                "Parse_JSON_GetDeviceID": {
                  "runAfter": {
                    "HTTP_GET_DeviceID": [
                      "Succeeded"
                    ]
                  },
                  "type": "ParseJson",
                  "inputs": {
                    "content": "@body('HTTP_GET_DeviceID')",
                    "schema": {
                      "type": "object",
                      "properties": {
                        "items": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "type": {
                                "type": "string"
                              },
                              "hostname": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "id",
                              "type",
                              "hostname"
                            ]
                          }
                        }
                      }
                    }
                  }
                },
                "For_each-copy": {
                  "foreach": "@body('Parse_JSON_GetDeviceID')?['items']",
                  "actions": {
                    "Condition": {
                      "actions": {
                        "HTTP_POST_ScanDevice": {
                          "runAfter": {
                            "Set_variable_Scan_Device_ID": [
                              "Succeeded"
                            ]
                          },
                          "type": "Http",
                          "inputs": {
                            "uri": "@{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['TenantRegion']}/endpoint/v1/endpoints/@{body('Parse_JSON_for_each')?['id']}/scans",
                            "method": "POST",
                            "headers": {
                              "Content-Type": "application/json",
                              "X-Tenant-ID": "@{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['TenantID']}",
                              "Authorization": "Bearer @{body('Parse_OrchestatorPart_Sophos_Auth_Playbook')?['AccessToken']}"
                            },
                            "body": {}
                          },
                          "runtimeConfiguration": {
                            "contentTransfer": {
                              "transferMode": "Chunked"
                            }
                          }
                        },
                        "Set_variable_Scan_Device_ID": {
                          "type": "SetVariable",
                          "inputs": {
                            "name": "Scan Device ID",
                            "value": "@body('Parse_JSON_for_each')?['id']"
                          }
                        },
                        "Append_to_string_variable_2": {
                          "runAfter": {
                            "HTTP_POST_ScanDevice": [
                              "Succeeded"
                            ]
                          },
                          "type": "AppendToStringVariable",
                          "inputs": {
                            "name": "output message",
                            "value": "Se ha lanzado un escaneo exitosamente"
                          }
                        },
                        "Append_to_string_variable_3": {
                          "runAfter": {
                            "HTTP_POST_ScanDevice": [
                              "TimedOut",
                              "Skipped",
                              "Failed"
                            ]
                          },
                          "type": "AppendToStringVariable",
                          "inputs": {
                            "name": "output message",
                            "value": "Fallo al ejecutar HTTP POST ScanDevice:\n\n@{body('HTTP_POST_ScanDevice')}\n"
                          }
                        }
                      },
                      "runAfter": {
                        "Set_hostname_current_item": [
                          "Succeeded"
                        ]
                      },
                      "else": {
                        "actions": {}
                      },
                      "expression": {
                        "and": [
                          {
                            "equals": [
                              "@items('For_each')",
                              "@variables('Hostname')"
                            ]
                          }
                        ]
                      },
                      "type": "If"
                    },
                    "Parse_JSON_for_each": {
                      "type": "ParseJson",
                      "inputs": {
                        "content": "@items('For_each-copy')",
                        "schema": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "hostname": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "Set_hostname_current_item": {
                      "runAfter": {
                        "Parse_JSON_for_each": [
                          "Succeeded"
                        ]
                      },
                      "type": "SetVariable",
                      "inputs": {
                        "name": "Hostname",
                        "value": "@body('Parse_JSON_for_each')?['hostname']"
                      }
                    }
                  },
                  "runAfter": {
                    "Parse_JSON_GetDeviceID": [
                      "Succeeded"
                    ]
                  },
                  "type": "Foreach",
                  "runtimeConfiguration": {
                    "concurrency": {
                      "repetitions": 1
                    }
                  }
                },
                "Append_to_string_variable_1": {
                  "runAfter": {
                    "HTTP_GET_DeviceID": [
                      "TimedOut",
                      "Skipped",
                      "Failed"
                    ]
                  },
                  "type": "AppendToStringVariable",
                  "inputs": {
                    "name": "output message",
                    "value": "Fallo al ejecutar HTTP GET DeviceID:\n\n@{body('HTTP_GET_DeviceID')}\n"
                  }
                }
              },
              "runAfter": {
                "Parse_OrchestatorPart_Sophos_Auth_Playbook": [
                  "Succeeded"
                ]
              },
              "type": "Foreach"
            },
            "Scan_Device_ID": {
              "runAfter": {
                "Initialize_variables": [
                  "Succeeded"
                ]
              },
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "Scan Device ID",
                    "type": "string"
                  }
                ]
              }
            },
            "Hostname": {
              "runAfter": {
                "Scan_Device_ID": [
                  "Succeeded"
                ]
              },
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "Hostname",
                    "type": "string"
                  }
                ]
              }
            },
            "Response": {
              "runAfter": {
                "For_each": [
                  "Succeeded"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "statusCode": 200,
                "body": {
                  "message": "@variables('output message')"
                }
              }
            },
            "Initialize_variables": {
              "runAfter": {},
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "output message",
                    "type": "string",
                    "value": "Ejecuci√≥n playbook Launch Antivirus:\n\n"
                  }
                ]
              }
            },
            "Append_to_string_variable": {
              "runAfter": {
                "OrchestatorPart_Sophos_Auth_Playbook": [
                  "TimedOut",
                  "Skipped",
                  "Failed"
                ]
              },
              "type": "AppendToStringVariable",
              "inputs": {
                "name": "output message",
                "value": "Fallo al ejecutar el workflow OrchestatorPart Sophos Auth Playbook\n\n"
              }
            },
            "Response_1": {
              "runAfter": {
                "For_each": [
                  "Failed",
                  "Skipped",
                  "TimedOut"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "statusCode": 400,
                "body": {
                  "message": "@variables('output message')"
                }
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "azuresentinel": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                "connectionName": "[variables('AzureSentinelConnectionName')]",
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]",
                "connectionProperties": {
                  "authentication": {
                    "type": "ManagedServiceIdentity"
                  }
                }
              }
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('AzureSentinelConnectionName')]",
      "location": "[resourceGroup().location]",
      "kind": "V1",
      "properties": {
        "displayName": "[variables('AzureSentinelConnectionName')]",
        "customParameterValues": {},
        "parameterValueType": "Alternative",
        "api": {
          "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
        }
      }
    }
  ]
}